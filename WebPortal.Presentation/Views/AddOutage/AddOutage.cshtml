@model WebPortal.Models.AddOutageViewModel

<div class="container mt-5">
    <h2>Add Outage</h2>

    <form asp-action="Add" method="post">
        <div class="form-group">
            <label for="NetworkHierarchy">Network Hierarchy</label>
            <select asp-for="ChannelKey" class="form-control" asp-items="Model.NetworkHierarchies">
                <option value="">Please select</option>
            </select>
        </div>

        <div class="form-group">
            <label for="ProblemTypeKey">Problem Type</label>
            <select asp-for="ProblemTypeKey" class="form-control" asp-items="Model.ProblemTypes">
                <option value="">Please select</option>
            </select>
        </div>

        <div class="form-group">
            <label for="StartDate">Start Date</label>
            <input asp-for="IsPlanned" type="date" class="form-control" />
        </div>

        <div class="form-group">
            <label for="SearchCriteria">Search Criteria</label>
            <select asp-for="IncidentId" class="form-control" asp-items="Model.SearchCriteria">
                <option value="">Please select</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Submit</button>
    </form>
</div>
