@using Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Cutting Portal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>
<header>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Cutting Portal</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Search" ? "active" : "")"
                               asp-controller="CuttingDownSearch" asp-action="Search">Search</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "IgnoredOutages" ? "active" : "")"
                               asp-controller="IgnoredOutages" asp-action="IgnoredOutages">Ignored Outages</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "AddOutage" ? "active" : "")"
                               asp-controller="AddOutage" asp-action="AddOutage">Add Outage</a>
                        </li>
                        <li class="nav-item">
                            <form asp-controller="Login" asp-action="Logout" method="post" style="display: inline;">
                                <button type="submit" class="btn btn-link nav-link text-white" style="padding: 0; border: none; background: none;">Logout</button>
                            </form>
                        </li>



                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Login" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>




<div class="container my-5">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer mt-auto py-3 bg-light">
    <div class="container text-center">
        <span class="text-muted">&copy; 2025 - Cutting Portal - <a asp-controller="Home" asp-action="Privacy">Privacy</a></span>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
